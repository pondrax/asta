{
	"name": "asta",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"start": "vite-node --options.transformMode.ssr='/.*/'  ./build/index.js",
		"serve": "pm2 delete asta || true && pm2 start pnpm --name asta -- run start",
		"dev": "NODE_TLS_REJECT_UNAUTHORIZED=0 vite dev",
		"build": "vite build && ./fix.sh",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test:unit": "vitest",
		"test": "npm run test:unit -- --run",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"db:seed": "vite-node  --options.transformMode.ssr='/.*/' src/lib/server/db/seed.ts"
	},
	"devDependencies": {
		"@inlang/paraglide-js": "^2.7.0",
		"@paralleldrive/cuid2": "^3.0.4",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.49.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.18",
		"daisyui": "^5.5.14",
		"drizzle-kit": "1.0.0-beta.1-03a5cdc",
		"drizzle-orm": "1.0.0-beta.1-03a5cdc",
		"drizzle-plus": "1.0.0-beta.34",
		"iconify-icon": "^3.0.2",
		"svelte": "^5.46.0",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vite-plugin-devtools-json": "^1.0.0",
		"vitest": "^4.0.16"
	},
	"dependencies": {
		"@node-rs/argon2": "^2.0.2",
		"arktype": "^2.1.29",
		"dayjs": "^1.11.19",
		"jose": "^6.1.3",
		"pdf-lib": "^1.17.1",
		"pdfjs-dist": "^5.4.449",
		"postgres": "^3.4.7",
		"qr-code-styling": "^1.9.2",
		"vite-node": "^5.2.0"
	},
	"packageManager": "pnpm@10.17.1+sha512.17c560fca4867ae9473a3899ad84a88334914f379be46d455cbf92e5cf4b39d34985d452d2583baf19967fa76cb5c17bc9e245529d0b98745721aa7200ecaf7a"
}